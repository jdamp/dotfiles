magenta2 = ${xrdb:color13:#1a7e87}
cyan2 = ${xrdb:color14:#0fbda0}
white2 = ${xrdb:color15:#b9fafc}

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 30
fixed-center = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
background = ${colors.bg}
foreground = ${colors.fg}

module-margin-left = 10
module-margin-right = 0

border-top-size = 3
border-right-size = 3
border-left-size = 3
border-bottom-size = 3
border-color = ${colors.black2}

line-size = 2

font-0 = FontAwesome:size=10;0
font-1 = Roboto:size=10;0
font-2 = "Wuncon siji:pixelsize=10;0"
font-3 = "Wuncon siji:pixelsize=10;0";"FontAwesome 5:style=Solid:pixelsize=9;0"

modules-left = i3 
modules-center = spotify
modules-right = volume xbacklight battery0 battery1 date
tray-position = right
tray-padding = 0
tray-background = ${colors.black1}


[bar/top-left]
monitor = ${env:MONITOR:HDMI1}
width = 100%
height = 25
fixed-center = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
background = ${colors.bg}
foreground = ${colors.fg}

modules-left = i3


[module/battery0]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = Charging %percentage%% %time%%
label-discharging = %percentage%% %time% left
label-full = Fully charged

format-discharging-foreground = ${colors.magenta1}
format-discharging-underline = ${colors.magenta1}

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
; Framerate in milliseconds
animation-discharging-framerate = 500

