[module/memory]
inherit = module/theme
type = internal/memory
interval = 2
format-prefix = " "
format-underline = #999999
label = %{F${colors.white}  %percentage_used% %{F-}

[module/wlan]
inherit = module/theme
type = internal/network
interface = wlp3s0
interval = 1
click-left = nm-connection-editor &
format-connected = <label-connected>
format-connected-underline = #268bd2
format-disconnected-underline = ${colors.red}

;label-connected = " %local_ip% %signal% %downspeed% %upspeed%"
label-connected = " %signal% [  %downspeed% ] [  %upspeed% ]"
label-disconnected = "OFFLINE"
label-connected-foreground = ${colors.green}
label-disconnected-foreground = ${colors.red}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.gray}

[module/eth]
inherit = module/theme
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-foreground-foreground = ${colors.gray}
label-connected = %local_ip%

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.gray}

[module/date]
inherit = module/theme
type = internal/date
interval = 1

time = "%a - %d.%m.%Y - %H:%M:%S"
time-alt = "%a - %d.%m.%Y - %I:%M %p"

format-prefix = " "
format-underline = ${colors.white}

label = %date% %time%

